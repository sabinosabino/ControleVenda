<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Language" content="pt-br">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SAD-App</title>
    @Styles.Render("~/Content/css/Site")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.css" media="screen" />
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css" media="screen" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">


            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                @if (Request.IsAuthenticated)
                {
                    @Html.ActionLink("SAD - Controles internos", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                Sistema
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Usuarios", "Index", "Usuarios")</li>
                                <li>@Html.ActionLink("Grupos de Acesso", "Index", "Grupo")</li>
                            </ul>
                        </li>

                    </ul>
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                Controles
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Clientes", "Index", "Clientes")</li>
                                <li>@Html.ActionLink("Vendas", "Index", "Vendas")</li>
                                <li>@Html.ActionLink("Pagamentos", "Index", "Pagamentos")</li>
                                <li>@Html.ActionLink("Painel", "Index", "VendasPagamentos")</li>
                            </ul>
                        </li>
                    </ul>
                }
            <div class="text-right">
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Sair", "Sair", "Login")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Logar", "Login", "Login")</li>
                </ul>
            </div>
            </div>


        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - SAD-App</p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/jquery.mask.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>

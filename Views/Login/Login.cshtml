@model ControleFinanc.Models.Login

@{
    ViewBag.Title = "Login";
}

<!--CONTAINER CRIAR UM CONTAINER PARA ORGANIZAR OS CONTROLES-->
<div class="container">
    <!--COLUNAS SÃO DIVIDAS EM 12-->
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <!--Um HTML Helper é apenas um método que retorna uma string-->
        <!--Nesse caso estou usando using e informando  a action no controller-->
        @using (Html.BeginForm("Login", "Login", new {ReturnUrl=ViewBag.ReturnUrl },FormMethod.Post, new { @class = "well jumbotron" }))
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="text-center col-md-12">
                    <img src="~/Content/Img/Login.png" class="img-responsive col-md-4 col-md-offset-4" alt="Responsive image">
                    <div class="col-md-12">
                        <h2>SEJA BEM VINDO(A)!</h2>
                    </div>

                </div>
                <div class="form-group">
                    <label for="Usuario">Usuário</label>
                    <!--Modelo para criar controles-->
                    @Html.EditorFor(model => model.Usuario, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Usuario, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label for="Senha">Senha</label>
                    <!--Modelo para criar controles-->
                    @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <!--Modelo para criar controles-->
                    @Html.EditorFor(model => model.LembrarMe)
                    @Html.ValidationMessageFor(model => model.LembrarMe, "", new { @class = "text-danger" })
                    <label for="LembrarMe">Lembrar-Me</label>
                </div>

                <div class="form-group">
                    <input type="submit" class="btn btn-success col-md-12" value="LOGAR" />
                </div>

            </div>

        }


    </div>
    <div class="col-md-3"></div>
</div>

